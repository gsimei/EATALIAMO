<div id="<%= dom_id post %>">
   <p class="card-text">Estimated reading time: <%= post.estimated_reading_time %> min</p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= raw post.body %>
  </p>

  <p>
    <strong>Published:</strong>
    <%= post.published %>
  </p>

  <p>
    <strong>Highlight:</strong>
    <%= post.highlight %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user_id %>
  </p>

</div>
