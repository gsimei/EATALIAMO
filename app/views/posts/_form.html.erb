
<%= simple_form_for(@post, data: { turbo_frame: "my-frame" }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.label :body %>
    <%= tinymce %>
    <%= f.text_area :body, :class => "tinymce", :rows => 40, :cols => 120 %>
    <%= f.input :published, as: :boolean, true_label: "Published", false_label: "Unpublished" %>
    <%= f.input :highlight, as: :boolean, true_label: "Highlight", false_label: "Unhighlight" %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
